<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.stoa.org/epidoc/schema/latest/tei-epidoc.rng" schematypens="http://relaxng.org/ns/structure/1.0"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0">
    <teiHeader>
        <fileDesc>
            <titleStmt>
                <title>Divine and Sacred Entities and Saints</title>
                <!--here are also included epithets associated with specific entities in the inscriptions-->
            </titleStmt>
            <publicationStmt><ab/></publicationStmt>
            <sourceDesc><ab/></sourceDesc>
        </fileDesc>
    </teiHeader>
    <text>
        <body>
            <listPerson>
                
                <person xml:id="Fathers">
                    <persName xml:lang="grc">τριακόσιοι δεκαοκτὼ θεοφόροι Πατέρες</persName>
                    <persName xml:lang="en">318 Godbearing Fathers (of the First Ecumenical Council) </persName>
                    <!--<idno type="wikidata">Not listed</idno>-->
                </person>
                
                <person xml:id="FortyMartyrs">
                    <persName xml:lang="grc">οἱ Ἅγιοι Τεσσαράκοντα</persName>
                    <persName xml:lang="en">Forty Martyrs of Sebaste</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q931446</idno>
                </person>
                
                <person xml:id="Helena">
                    <persName xml:lang="grc">Ἁγία Ἑλένη</persName>
                    <!--<persName xml:lang="en">Helena, saint or Saint Helena</persName>-->                   
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q170164</idno>                   
                </person>
                
                <person xml:id="JesusChrist">
                    <persName xml:lang="grc">Ἰησοῦς Χριστός</persName>
                    <persName xml:lang="en">Jesus Christ</persName>
                    <persName type="epithet" subtype="JesusChrist" key="SonofGod" xml:lang="grc">Υἱὸς Θεοῦ</persName>
                    <persName type="epithet" subtype="JesusChrist" key="SonofGod" xml:lang="en">Son of God</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q302</idno>
                    <!--This is very tricky. Jesus and Christ, together or separately? Or, together AND separately, depending on the content of the inscriptions. How about Son of God? Name or epithet?-->
                    <note>See also: Word</note>
                </person>
                
                <person xml:id="MeterTheou">
                    <persName xml:lang="grc">Μήτηρ Θεοῦ</persName>
                    <persName xml:lang="en">Mother of God</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q345</idno>
                    <note>See also: Θεοτόκος, Theotokos, the Virgin</note>
                </person>
                
                <person xml:id="Nicholas">
                    <persName xml:lang="grc">Ἅγιος Νικόλαος</persName>
                    <!--<persName xml:lang="en">Nicholas, saint or Saint Nicholas</persName>-->
                    <persName type="epithet" subtype="Nicholas" xml:lang="grc">τῆς Στέγης</persName>
                    <persName type="epithet" subtype="Nicholas" xml:lang="en">of the Roof</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q44269</idno>                   
                </person>
                 
                <person xml:id="Theotokos">
                    <persName xml:lang="grc">Θεοτόκος</persName>
                    <persName xml:lang="en">The one who gave birth to God</persName>
                    <persName type="epithet" subtype="Theotokos" key="Arakiotissa" xml:lang="grc">τοῦ Άρακος</persName>
                    <persName type="epithet" subtype="Theotokos" key="Arakiotissa" xml:lang="en">of Arakas</persName>
                    <persName type="epithet" subtype="Theotokos" key="despoina" xml:lang="grc">δέσποινα</persName>
                    <persName type="epithet" subtype="Theotokos" key="despoina" xml:lang="en">lady</persName>
                    <persName type="epithet" subtype="Theotokos" key="hyperagia" xml:lang="grc">ὑπεραγία</persName>
                    <persName type="epithet" subtype="Theotokos" key="hyperagia" xml:lang="en">most holy</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q208542</idno>
                    <note>See also: Μήτηρ Θεοῦ, Mother of God, the Virgin</note>
                    <!--Theotokos is actually an epithet, but it is used often as a name for the Virgin Mary. List separately?-->
                </person>
                
                <person xml:id="Trinity">
                    <persName xml:lang="grc">Ἁγία Τριὰς</persName>
                    <persName xml:lang="en">Holy Trinity</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q37090</idno>
                </person>
                
                <person xml:id="Word">
                    <persName xml:lang="grc">Λόγος</persName>
                    <persName xml:lang="en">Word of God</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q3896345</idno>
                    <note>See also: Christ</note>
                    <!--Logos is an epithet for Christ, but is also used separate as a name for Him. Keep separate listing?-->
                </person>
                
            </listPerson>
        </body>
    </text>
</TEI>