            <div type="edition" xml:space="preserve" xml:lang="grc">
                <ab>
                    <lb n="1"/><w lemma="χαίρω">Χαῖρε </w><addName type="epithet" subtype="Maria" key="kecharitomene"><w lemma="κεχαριτωμένη">και
                    <lb n="2" break="no"/>χαριτομέ
                    <lb n="3" break="no"/><hi rend="ligature">νη</hi></w></addName> <persName type="sacred" key="Maria">Μαρία</persName>
                    <lb n="4"/>ὁ <persName type="divine" key="Lord"><w lemma="Κύριος"><expan><abbr rend="supraline">Κ</abbr><ex>ύριο</ex><abbr rend="supraline">ς</abbr> </expan></w></persName>μετ
                    <lb n="5" break="no"/>ὰ σ<hi rend="ligature">οῦ</hi>
                </ab>
