                    <lb n="4"/><hi rend="ligature">τ<choice><orig>ο</orig><reg>ὸ</reg></choice></hi>ν <w lemma="λαός"><del rend="erasure">α</del>α
                    <lb n="5" break="no"/><choice><orig>ό</orig><reg>ὸ</reg></choice>ν</w> <w lemma="σύ">σου</w> 
