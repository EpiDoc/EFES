<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.stoa.org/epidoc/schema/latest/tei-epidoc.rng" schematypens="http://relaxng.org/ns/structure/1.0"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0">
    <teiHeader>
        <fileDesc>
            <titleStmt>
                <title>Divine and Sacred Entities and Saints</title>
                <!--here are also included epithets associated with specific entities in the inscriptions-->
            </titleStmt>
            <publicationStmt><ab/></publicationStmt>
            <sourceDesc><ab/></sourceDesc>
        </fileDesc>
    </teiHeader>
    <text>
        <body>
            <listPerson>
                
                <person xml:id="angel">
                    <persName xml:lang="grc">ἄγγελος</persName>
                    <persName xml:lang="en">angel</persName>                   
                    <persName xml:lang="grc" type="epithet" subtype="angel" key="ofGod">Θεοῦ</persName>
                    <persName xml:lang="en" type="epithet" subtype="angel" key="ofGod">of God</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q2619342</idno>                   
                </person>
                
                <person sameAs="#JesusChrist"><persName>Christ</persName></person>
                                
                <person xml:id="TrueCross">
                    <persName xml:lang="grc">Τίμιος Σταυρός</persName>
                    <persName xml:lang="en">True Cross</persName>
                    <persName xml:lang="grc" type="epithet" subtype="TrueCross" key="worshipful">προσκυνητός</persName>
                    <persName xml:lang="en" type="epithet" subtype="TrueCross" key="worshipful">worshipful</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q380356</idno>
                 </person>
                
                <person xml:id="Fathers">
                    <persName xml:lang="grc"> <seg>οἱ</seg> τριακόσιοι δεκαοκτὼ θεοφόροι Πατέρες</persName>
                    <persName xml:lang="en">318 Godbearing Fathers (of the First Ecumenical Council) </persName>
                    <!--<idno type="wikidata">Not listed</idno>-->
                </person>
                
                <person xml:id="FortyMartyrs">
                    <persName xml:lang="grc"><seg>οἱ ἅγιοι</seg> Τεσσαράκοντα</persName>
                    <persName xml:lang="en">Forty Martyrs of Sebaste</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q931446</idno>
                </person>
                
                <person xml:id="God">
                    <persName xml:lang="grc">Θεός</persName>
                    <persName xml:lang="en">God</persName>
                    <persName xml:lang="grc" type="epithet" subtype="God" key="Lord">Κύριος</persName>
                    <persName xml:lang="en" type="epithet" subtype="God" key="Lord">Lord</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q825</idno>                   
                    <!--What do we do with Lord? It also occurs on its own, but it also occurs as Lord God - Kyrios o Theos-->
                    <note>See also: Christ, Jesus Christ, Lord, Trinity, Word</note>
                </person>
                
                <person xml:id="GregoryNazianzenos">
                    <persName xml:lang="grc"><seg>ἅγιος</seg> Γρηγόριος</persName>
                    <persName xml:lang="en">Gregory the Theologian / Nazianzenos, saint</persName> 
                    <persName xml:lang="grc" type="epithet" subtype="GregoryNazianzenos" key="Theologian">ὁ Θεολόγος</persName>
                    <persName xml:lang="en" type="epithet" subtype="GregoryNazianzenos" key="Theologian">Theologian</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q44011</idno>                   
                </person>
                
                <person xml:id="Helena">
                    <persName xml:lang="grc"><seg>ἁγία</seg> Ἑλένη</persName>
                    <persName xml:lang="en">Helena, saint</persName>
                    <!--<persName xml:lang="en">Helena, saint or Saint Helena</persName>-->                   
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q170164</idno>                   
                </person>
                
                <!--<person xml:id="Lord">
                    <persName xml:lang="grc">Κύριος</persName>
                    <persName xml:lang="en">Lord</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q12826225</idno>              
                    <note>See also: Christ, God, Jesus Christ, Trinity, Word</note>
                </person>-->
                
                <person xml:id="JesusChrist">
                    <persName xml:lang="grc">Ἰησοῦς Χριστός</persName>
                    <persName xml:lang="en">Jesus Christ</persName>
                    <persName xml:lang="grc" type="epithet" subtype="JesusChrist" key="SonofGod">Υἱὸς Θεοῦ</persName>
                    <persName xml:lang="en" type="epithet" subtype="JesusChrist" key="SonofGod">Son of God</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q302</idno>
                    <!--This is very tricky. Jesus and Christ, together or separately? Or, together AND separately, depending on the content of the inscriptions. How about Son of God? Name or epithet?-->
                    <note>See also: Christ, Word</note>
                </person>
                
                <person xml:id="Matthew">
                    <persName xml:lang="grc"><seg>ἅγιος</seg>Ματθαῖος</persName>
                    <persName xml:lang="en">Matthew, the Evangelist</persName>                   
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q43600</idno>                   
                </person>
                
                <person xml:id="MeterTheou">
                    <persName xml:lang="grc">Μήτηρ Θεοῦ</persName>
                    <persName xml:lang="en">Mother of God</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q345</idno>
                    <note>See also: Theotokos, the Virgin</note>
                </person>
                
                <person xml:id="Nicholas">
                    <persName xml:lang="grc"><seg>ἅγιος</seg> Νικόλαος</persName>
                    <persName xml:lang="en">Nicholas, saint</persName>
                    <persName xml:lang="grc" type="epithet" subtype="Nicholas">τῆς Στέγης</persName>
                    <persName xml:lang="en" type="epithet" subtype="Nicholas">of the Roof</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q44269</idno>                   
                </person>
                
                <person xml:id="Jeremiah">
                    <persName xml:lang="grc"><seg>προφήτης</seg> Ἱερεμίας</persName>
                    <persName xml:lang="en">Jeremiah, prophet</persName>                   
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q158825</idno>                   
                </person>
                
                <person xml:id="Virgin">
                    <persName xml:lang="grc">ἡ Παρθένος</persName>
                    <persName xml:lang="en">the Virgin</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q345</idno>
                    <note>See also: Mother of God, Theotokos</note>
                </person>
                
                <person xml:id="Themonianos">
                    <persName xml:lang="grc"><seg>ὅσιος </seg>Θεμωνιανός</persName>
                    <persName xml:lang="en">Themonianos, saint</persName>
                    <!--<persName xml:lang="en">Themonianos, saint or Saint Themonianos</persName>-->                   
                    <idno type="wikidata">Not listed</idno>                   
                </person>
                 
                <person xml:id="Theotokos">
                    <persName xml:lang="grc">Θεοτόκος</persName>
                    <persName xml:lang="en">The one who gave birth to God</persName>
                    <persName xml:lang="grc" type="epithet" subtype="Theotokos" key="Arakiotissa">τοῦ Άρακος</persName>
                    <persName xml:lang="en" type="epithet" subtype="Theotokos" key="Arakiotissa">of Arakas</persName>
                    <persName xml:lang="grc" type="epithet" subtype="Theotokos" key="despoina">δέσποινα</persName>
                    <persName xml:lang="en" type="epithet" subtype="Theotokos" key="despoina">lady</persName>
                    <persName xml:lang="grc" type="epithet" subtype="Theotokos" key="hyperagia">ὑπεραγία</persName>
                    <persName xml:lang="en" type="epithet" subtype="Theotokos" key="hyperagia">most holy</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q208542</idno>
                    <note>See also: Mother of God, the Virgin</note>
                    <!--Theotokos is actually an epithet, but it is used often as a name for the Virgin Mary. List separately?-->
                </person>
                
                <person xml:id="Trinity">
                    <persName xml:lang="grc">Ἁγία Τριάς</persName>
                    <persName xml:lang="en">Holy Trinity</persName>
                    <idno type="wikidata">https://www.wikidata.org/wiki/Q37090</idno>
                </person>
                
                <person sameAs="#JesusChrist"><persName xml:lang="grc">Λόγος</persName>
                    <persName xml:lang="en">Word of God</persName>
                </person>
                
                
            </listPerson>
        </body>
    </text>
</TEI>